{
  "name": "roadrunner-mdn",
  "description": "Roadrunner MDN",
  "homepage": "https://github.com/mts/roadrunner/#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mts/roadrunner.git",
    "directory": "packages/mdn"
  },
  "version": "0.0.0",
  "main": "index.js",
  "files": [
    "build"
  ],
  "keywords": [
    "roadrunner mdn"
  ],
  "author": {
    "name": "MTS",
    "url": "https://github.com/mts"
  },
  "scripts": {
    "start": "nodemon --watch src/index.js --exec \"npm run build && node build/index.js\"",
    "prebuild": "rimraf build",
    "build": "babel src --out-dir build --copy-files",
    "release": "npm publish",
    "uninstall-packages": "rm -rf node_modules package-lock.json",
    "install-packages": "npm install",
    "reinstall-packages": "npm-run-all uninstall-packages install-packages",
    "npm-update": "npm update",
    "test": "jest -u --config jest.config.json --no-cache --silent --runInBand",
    "test:watchChanged:silent": "jest -u --config jest.config.json --watch --onlyChanged --verbose",
    "test:coverage": "jest --config jest.config.json --coverage --collectCoverageFrom=src/**/*.{js,jsx} --silent",
    "lint:format": "npm-run-all lint format",
    "lint": "npm-run-all lint:js:jsx",
    "lint:js:jsx": "eslint --ext .js --ext .jsx src/ --fix",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "bootstrap": "npm-run-all lint:format build test"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-proposal-optional-catch-binding": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-classes": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/plugin-transform-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/runtime": "^7.6.3",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0"
  }
}
